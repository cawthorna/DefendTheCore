<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/moneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money: 100"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Health Upgrade -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/healthUpgradeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Core Health"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/healthUpgradeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Lvl 1)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/healthUpgradeTitleTextView"
            app:layout_constraintTop_toTopOf="@id/healthUpgradeTitleTextView"
            app:layout_constraintBottom_toBottomOf="@id/healthUpgradeTitleTextView"/>

        <TextView
            android:id="@+id/healthUpgradeCurrentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 100"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/healthUpgradeTitleTextView" />

        <TextView
            android:id="@+id/healthUpgradeNextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: 125"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/healthUpgradeCurrentTextView"
            app:layout_constraintTop_toTopOf="@id/healthUpgradeCurrentTextView"
            app:layout_constraintBottom_toBottomOf="@id/healthUpgradeCurrentTextView"/>

        <Button
            android:id="@+id/healthUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/healthUpgradeCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 50"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/healthUpgradeButton"
            app:layout_constraintTop_toTopOf="@id/healthUpgradeButton"
            app:layout_constraintBottom_toBottomOf="@id/healthUpgradeButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Damage Upgrade -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/damageUpgradeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turret Damage"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/damageUpgradeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Lvl 1)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/damageUpgradeTitleTextView"
            app:layout_constraintTop_toTopOf="@id/damageUpgradeTitleTextView"
            app:layout_constraintBottom_toBottomOf="@id/damageUpgradeTitleTextView"/>

        <TextView
            android:id="@+id/damageUpgradeCurrentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 10"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/damageUpgradeTitleTextView" />

        <TextView
            android:id="@+id/damageUpgradeNextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: 15"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/damageUpgradeCurrentTextView"
            app:layout_constraintTop_toTopOf="@id/damageUpgradeCurrentTextView"
            app:layout_constraintBottom_toBottomOf="@id/damageUpgradeCurrentTextView"/>

        <Button
            android:id="@+id/damageUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/damageUpgradeCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 75"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/damageUpgradeButton"
            app:layout_constraintTop_toTopOf="@id/damageUpgradeButton"
            app:layout_constraintBottom_toBottomOf="@id/damageUpgradeButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fire Rate Upgrade -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/fireRateUpgradeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire Rate"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fireRateUpgradeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Lvl 1)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/fireRateUpgradeTitleTextView"
            app:layout_constraintTop_toTopOf="@id/fireRateUpgradeTitleTextView"
            app:layout_constraintBottom_toBottomOf="@id/fireRateUpgradeTitleTextView"/>

        <TextView
            android:id="@+id/fireRateUpgradeCurrentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 1.00/s"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fireRateUpgradeTitleTextView" />

        <TextView
            android:id="@+id/fireRateUpgradeNextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: 1.20/s"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/fireRateUpgradeCurrentTextView"
            app:layout_constraintTop_toTopOf="@id/fireRateUpgradeCurrentTextView"
            app:layout_constraintBottom_toBottomOf="@id/fireRateUpgradeCurrentTextView"/>

        <Button
            android:id="@+id/fireRateUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/fireRateUpgradeCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 100"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/fireRateUpgradeButton"
            app:layout_constraintTop_toTopOf="@id/fireRateUpgradeButton"
            app:layout_constraintBottom_toBottomOf="@id/fireRateUpgradeButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Damage Resistance Upgrade -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/damageResistanceUpgradeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dmg. Resistance"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/damageResistanceUpgradeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Lvl 1)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/damageResistanceUpgradeTitleTextView"
            app:layout_constraintTop_toTopOf="@id/damageResistanceUpgradeTitleTextView"
            app:layout_constraintBottom_toBottomOf="@id/damageResistanceUpgradeTitleTextView"/>

        <TextView
            android:id="@+id/damageResistanceUpgradeCurrentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 0%"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/damageResistanceUpgradeTitleTextView" />

        <TextView
            android:id="@+id/damageResistanceUpgradeNextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: 5%"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/damageResistanceUpgradeCurrentTextView"
            app:layout_constraintTop_toTopOf="@id/damageResistanceUpgradeCurrentTextView"
            app:layout_constraintBottom_toBottomOf="@id/damageResistanceUpgradeCurrentTextView"/>

        <Button
            android:id="@+id/damageResistanceUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/damageResistanceUpgradeCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 120"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/damageResistanceUpgradeButton"
            app:layout_constraintTop_toTopOf="@id/damageResistanceUpgradeButton"
            app:layout_constraintBottom_toBottomOf="@id/damageResistanceUpgradeButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Money Multiplier Upgrade -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/moneyMultiplierUpgradeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money Gain"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moneyMultiplierUpgradeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Lvl 1)"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/moneyMultiplierUpgradeTitleTextView"
            app:layout_constraintTop_toTopOf="@id/moneyMultiplierUpgradeTitleTextView"
            app:layout_constraintBottom_toBottomOf="@id/moneyMultiplierUpgradeTitleTextView"/>

        <TextView
            android:id="@+id/moneyMultiplierUpgradeCurrentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 1.0x"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moneyMultiplierUpgradeTitleTextView" />

        <TextView
            android:id="@+id/moneyMultiplierUpgradeNextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: 1.1x"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/moneyMultiplierUpgradeCurrentTextView"
            app:layout_constraintTop_toTopOf="@id/moneyMultiplierUpgradeCurrentTextView"
            app:layout_constraintBottom_toBottomOf="@id/moneyMultiplierUpgradeCurrentTextView"/>

        <Button
            android:id="@+id/moneyMultiplierUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/moneyMultiplierUpgradeCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 150"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/moneyMultiplierUpgradeButton"
            app:layout_constraintTop_toTopOf="@id/moneyMultiplierUpgradeButton"
            app:layout_constraintBottom_toBottomOf="@id/moneyMultiplierUpgradeButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
