<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/moneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money: 100"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Health Upgrade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/healthUpgradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Core Health (Lvl 1): 100" />

        <Button
            android:id="@+id/healthUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy (Cost: 50)" />
    </LinearLayout>

    <!-- Damage Upgrade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/damageUpgradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Turret Damage (Lvl 1): 10" />

        <Button
            android:id="@+id/damageUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy (Cost: 75)" />
    </LinearLayout>

    <!-- Fire Rate Upgrade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/fireRateUpgradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fire Rate (Lvl 1): 1/s" />

        <Button
            android:id="@+id/fireRateUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy (Cost: 100)" />
    </LinearLayout>

    <!-- Damage Resistance Upgrade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/damageResistanceUpgradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dmg. Resist (Lvl 1): 0%" />

        <Button
            android:id="@+id/damageResistanceUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy (Cost: 120)" />
    </LinearLayout>

    <!-- Money Multiplier Upgrade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/moneyMultiplierUpgradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Money Gain (Lvl 1): 1.0x" />

        <Button
            android:id="@+id/moneyMultiplierUpgradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy (Cost: 150)" />
    </LinearLayout>

</LinearLayout>
